{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
